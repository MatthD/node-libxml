{
  "name": "node-libxml",
  "version": "5.0.3",
  "description": "Check Wellformed, DTD validity & get Xpath from pure node addons",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupitex/node-libxml.git"
  },
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "install": "node-gyp-build",
    "build": "prebuildify --napi --tag-uv --tag-armv --strip",
    "build-mac": "prebuildify --napi --debug --strip --platform='darwin'",
    "build-linux": "prebuildify --napi --debug --strip --platform='linux' ",
    "build-windows": "prebuildify --napi --debug --strip --platform='win32' "
  },
  "author": "MatthD",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^2.0.0",
    "node-gyp": "^9.3.1",
    "node-gyp-build": "^4.2.3",
    "prebuildify": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "prebuilds/**/*",
    "*.d.ts",
    "*.js",
    "libxml*.h",
    "Readme.md",
    "package.json"
  ],
  "gypfile": true,
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "node-pre-gyp": "0.17.0"
  },
  "bundleDependencies": [
    "node-pre-gyp"
  ]
}
